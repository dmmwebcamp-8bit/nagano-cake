<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      <h5 class="alert-heading"><%= obj.errors.count %> 件のエラーが発生しました。</h5>
      <hr>
        <ul>
          <% obj.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>