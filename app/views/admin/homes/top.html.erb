<div class="container my-5">
  <div class="row">
    <div class="col-10">

      <!--フラッシュメッセージ-->
      <div class="text-danger font-weight-bold mb-3">
        <%= flash[:notice] %>
      </div>

      <h5 class="mb-5"><span class="bg-light px-4">注文履歴一覧</span></h5>

      <!--注文履歴一覧テーブル-->
      <div class="row">
        <div class="col-12 mx-auto">
          <table class="table">
            <thead class="bg-light">
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
                  <td><%= order.name %></td>
                  <td><%= order.total_amount %></td>
                  <td><%= Order.statuses_i18n[order.status]%></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <!--ページネーション-->
          <div class="d-flex justify-content-center">
            <%= paginate @orders %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>