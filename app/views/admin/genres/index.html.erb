<div class="container my-5">
  <div class="row">

    <div class="col-7">
      <h5 class="font-weight-bold ml-5 mb-3"><span class="bg-light px-4">ジャンル一覧</span></h5>

      <!--ジャンル新規登録欄-->
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless my-5">
          <tr>
            <td class="align-middle">ジャンル名</td>
            <td><%= f.text_field :name, placeholder: "ジャンル名", class:"form-control" %></td>
            <td><%= f.submit "新規登録", class:"btn btn-block btn-success font-weight-bold ml-3" %></td>
          </tr>
        </table>
      <% end %>

        <!--ジャンル一覧-->
        <div class="col-9">
          <table class="table">
            <thead class="bg-light">
              <th class="text-center">ジャンル</th>
              <th></th>
            </thead>

            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"col-7 offset-3 btn btn-success font-weignt-bold" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

    </div>
  </div>
</div>