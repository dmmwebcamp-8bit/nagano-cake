<div class="container my-5">
  <div class="row">
    <div class="col-9 mx-auto">
      <div class="row align-items-center justify-content-between">
        <h5 class="font-weight-bold"><span class="bg-light px-4">ショッピングカート</span></h5>
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger"%>
      </div>

      <!--カート内商品一覧-->
      <div class="table-responsive">
        <table class="table mt-4">
          <thead>
            <th colspan=2>商品名</th>
            <th>単価(税込)</th>
            <th colspan=2>数量</th>
            <th>小計</th>
            <th></th>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item|%>
              <tr>
                <td class="align-middle"><%= cart_item.item.get_image(80,40) %></td>
                <td class="align-middle"><%= cart_item.item.name %></td>
                <td class="align-middle"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                <%= form_with model: cart_item do |f| %>
                  <td class="align-middle"><%= f.select :amount, [*1..10],class: 'form-select' %></td>
                  <td class="align-middle"><%= f.submit '変更', class: 'btn btn-success' %></td>
                <% end %>
                <td class="align-middle"><%= cart_item.subtotal %></td>
                <td class="align-middle"><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
              </tr>
              <% @total += cart_item.subtotal %>
            <% end %>
          </tbody>
        </table>
      </div>

      <!--買い物を続ける/合計金額/情報入力に進む-->
      <div class="row justify-content-between">
        <div class="col">
          <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        </div>
        <div class="col">
          <table class="table">
            <tbody>
              <td>合計金額</td>
              <td><%= @total.to_s(:delimited) %></td>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row justify-content-center">
        <%= link_to "情報入力に進む", new_order_path ,class: "btn btn-success" %>
      </div>

    </div>
  </div>
</div>