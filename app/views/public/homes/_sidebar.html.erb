<div class="col-3">
  <table class="table table-borderless table-genres">
    <thead style="">
      <tr>
        <th class="text-center h3">ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <%  Genre.where(is_active: true).each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, items_path(genre_id: genre.id), class: "mb-2 h5" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>