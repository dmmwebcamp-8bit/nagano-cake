<div class="container my-5">
  <div class="row">

    <!--サイドバー部分-->
    <%= render 'public/homes/sidebar', genres: @genres %>

    <!--メイン部分-->
    <div class="col-9">
      <div class="row">
        <div class="col-5">
          <%= image_tag @item.get_image(200, 200) %>
        </div>
        <!--商品情報-->
        <div class="col-7 form-group">
          <%= form_with model: @cart_item, url: cart_items_path do |f| %>
            <div class="h2 font-weight-bold"><%= @item.name %></div>
            <div class="h5 mt-3"><%= @item.description %></div>
            <div class="mt-5">
              <span class="h3">¥ <%= number_with_delimiter(@item.with_tax_price) %></span>
              （税込）
            </div>
            <div class="row mt-4">
              <%= f.select :amount, [*1..10], {include_blank: '個数選択'},{required: true, class: "col-4 form-control"} %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit "カートに入れる", class: "col-4 offset-1 btn btn-success font-weight-bold" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>